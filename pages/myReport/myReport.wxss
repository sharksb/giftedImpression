@import '../boost/boostNumber.wxss';

/* title==start */

.title {
  width: 85%;
  margin: 30rpx auto 15rpx;
}

.little_title {
  width: 65%;
  display: flex;
  align-items: center;
  background-color: #fff3e1;
  font-size: 12px;
  margin-left: 20rpx;
  padding: 10rpx 10rpx;
  border-radius: 10rpx;
}

.van-icon {
  margin-right: 20rpx;
}

/* title==end */

/* echart==start */

.capabilityModel {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  box-sizing: border-box;
}

ec-canvas {
  width: 80%;
  height: 80%;
}

/* echart==start */

/* introduce==start */

#reportFirst {
  margin-top: 30rpx;
}

#reportTitle {
  text-align: center;
}

#reportTitle image {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 20rpx;
}

#reportTitle text {
  padding-bottom: 20rpx;
}

#reportTitle  button {
  width: 300rpx;
  height: 66rpx;
  line-height: 66rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #e65ab1;
  border-radius: 30rpx;
  margin-top: 22rpx;
}

/* introduce==end */

/* second==start */

#reportSecond {
  position: relative;
  top: 0;
  left: 0;
  height: 600rpx;
}

/* second==end */

/* third==start */

.endorsementModel {
  width: 90%;
  margin: 46rpx auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.endorsementModel view {
  font-size: 14px;
  text-align: center;
}

.endorsement_title {
  margin-bottom: 10rpx;
}

.endorsement_score {
  margin-bottom: 10rpx;
}

.endorsement_percentage {
  font-size: 60rpx;
  font-family: PingFangSC-regular;
}

.endorsement_content {
  color: red;
}
.divider .van-divider{
  width: 85%;
  margin: 0 auto
 }
/* third==end */

/* fourth==start */
.friendsImpression{
  width: 90%;
  margin: 0 auto;
  margin-top: 50rpx;
}
.qrcode {
  margin-top: 40rpx;
  text-align: center;
  margin-bottom: 80rpx;
}

.qrcode view {
  font-size: 14px;
  margin-top: 20rpx;
}

.qrcode image {
  width: 200rpx;
  height: 200rpx;
}

.friendReview {
  margin-top: 30rpx;
  margin-bottom: 80rpx;
}

/* fourth==start */

.reportButton {
  display: flex;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.reportButton .inviteOther {
  width: 60%;
}

.reportButton .exportReport {
  width: 40%;
}

.reportButton button {
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 38rpx;
  font-size: 14px;
  color: #101010;
}

.inviteOther button {
  background-color: #f3dbdb;
  width: 80%;
}

.exportReport button {
  background-color: #f3d43a;
  width: 75%;
}

button::after {
  border: 1px solid #bbb;
}

.van-icon {
  margin-right: 0;
}

/* noreport==start */

.noReport {
  width: 360rpx;
  height: 360rpx;
  margin: 20rpx auto;
  text-align: center;
  border-radius: 50%;
  border: 1px solid #bbb;
}

.noReport_word {
  margin-top: 140rpx;
}

.noReport_button{
  width: 400rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #F3D43A;
  border-radius: 70rpx;
  margin-top: 90rpx;
}

/* noreport==end */

/* pages/mylabel/mylabel.wxss */

.mylabel_content {
  display: flex;
  /* justify-content: space-between; */
  flex-wrap: wrap;
  width: 90%;
  margin: 0 auto;
}

.mylabel_content label {
  width: 33.3333333333%;
}

.mylabel_box {
  flex: 1;
  width: 90%;
  margin: 0 auto;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background-color: #f5f5f5;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #757575;
  border: 1px solid rgba(0, 0, 0, 0);
}

checkbox {
  width: 100%;
  height: 100%;
}

.checkedbox {
  color: #39bfbf;
  border: 1px solid #39bfbf;
}

.title {
  width: 90%;
  margin: 30rpx auto;
  display: flex;
  justify-content: space-between;
}

.title_circle {
  width: 18px;
  height: 18px;
  line-height: 18px;
  background-color: #39bfbf;
  color: white;
  font-size: 12px;
  text-align: center;
  border-radius: 50%;
}


.selected {
  /* display: flex;
  align-items: flex-start */
}
.selected_title {
  align-self:baseline;
  width: 100rpx;
  display: inline-block;
  font-size: 28rpx;
}
.selected_box {
  display: inline-block;
}
.selectedOpt {
  display: inline-block;
  padding: 5px 10px;
  margin-left: 10px;
  margin-bottom: 8px;
  border-radius: 20rpx;
  background-color: #f5f5f5;
  color: #39bfbf;
  font-size: 28rpx;
  height: 35rpx;
}
